<main class="main">
	
	<!-- begin catalog-section -->
	<section class="catalog-section">
		<div class="uk-container">
			<h1 class="title-h1">Мужчинам</h1>

			<!-- begin subcategories -->
			<div class="subcategories"  uk-scrollspy="cls: slide-up-content; delay: 0; repeat: false">
				<div class="uk-grid">
					<div class="uk-width-1-2@s uk-width-3-5@m">
						<div class="subcategory push-left">
							<div class="img-wrapper">
								<div class="subcategory__img"><img data-src="img/media/subcategory-img-1-758x423.png" alt="" uk-img></div>
								<a href="" class="round-link icon-small-arrow-right"></a>
							</div>
							<div class="subcategory__title"><a href="">Скидка 50%</a></div>
							<div class="subcategory__subtitle">На кошельки и сумочки</div>
						</div>
					</div>
					<div class="uk-width-1-2@s uk-width-2-5@m">
						<div class="subcategory">
							<div class="img-wrapper">
								<div class="subcategory__img"><img data-src="img/media/subcategory-img-2-483x432.png" alt="" uk-img></div>
								<a href="" class="round-link icon-small-arrow-right"></a>
							</div>
							<div class="subcategory__title"><a href="">Рюкзаки</a></div>
							<div class="subcategory__subtitle">Удобные и повседневные</div>
						</div>
					</div>
